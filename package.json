{
    "name": "shake-detector",
    "version": "0.3.1",
    "description": "Mobile device shakes detection",
    "keywords": [
        "device shake",
        "device shake detection",
        "device motion"
    ],
    "license": "MIT",
    "main": "dist/shake-monitor.cjs.js",
    "module": "dist/shake-monitor.esm.js",
    "browser": "dist/shake-monitor.umd.js",
    "typings": "types",
    "repository": {
        "type": "git",
        "url": "https://github.com/serglider/shake-detector.git"
    },
    "dependencies": {},
    "devDependencies": {
        "@ampproject/rollup-plugin-closure-compiler": "0.26.0",
        "prettier": "2.2.1",
        "rollup": "2.38.0",
        "rollup-plugin-commonjs": "10.1.0",
        "rollup-plugin-node-resolve": "5.2.0",
        "rollup-plugin-typescript": "^1.0.1",
        "ts-jest": "^26.5.0",
        "tslib": "^2.1.0",
        "typedoc": "^0.20.19",
        "typescript": "^4.1.3"
    },
    "scripts": {
        "build": "rollup -c rollup/prod.config.js",
        "dev-build": "rollup -c rollup/dev.config.js -w",
        "dev": "rollup -c rollup/dev.config.js",
        "declarations": "tsc --emitDeclarationOnly",
        "postversion": "npm run build && npm publish && git push && git push --tags"
    },
    "files": [
        "dist",
        "types"
    ],
    "jest": {
        "verbose": true
    },
    "prettier": {
        "trailingComma": "es5",
        "printWidth": 100,
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "arrowParens": "avoid"
    }
}
